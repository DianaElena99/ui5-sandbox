<mvc:View
   xmlns:mvc="sap.ui.core.mvc"
   	xmlns="sap.uxap"
		xmlns:layout="sap.ui.layout"
		xmlns:m="sap.m"
	xmlns:core="sap.ui.core"
	controllerName="org.ubb.hw.controller.HW"
>

	<ObjectPageHeaderContent>
		<content>

	<m:Button
		text="{i18n>showHelloButtonText}"
		press=".onShowHello"
		type="Critical"
		icon="https://i.pinimg.com/originals/f5/7e/00/f57e00306f3183cc39fa919fec41418b.jpg"
		width="10rem"/>
	<m:Input
      value="{/recipient/name}"
      description="Hello {/recipient/name}"
      valueLiveUpdate="true"
      width="60%"/>
	</content>
	</ObjectPageHeaderContent>

</mvc:View>